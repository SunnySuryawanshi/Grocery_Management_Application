<link href="~/css/AddGrocery.css" rel="stylesheet" />
@model Grocery_Management_Application.ViewModel.Grocery.AddGroceryViewModel


<div class="container my-4">

			<h2 class="text-center"><b>Add Grocery</b></h2>
		
			<form asp-action="AddGrocery" asp-controller="Grocery" method="post">
				<div asp-validation-summary="All" class="font-weight-bold text-danger"></div>
					<div class="form-group">
						<label asp-for="ItemName"></label>
			            <input type="text" asp-for="ItemName" class="form-control" placeholder="Write Grocery Name" />
						<span asp-validation-for="ItemName" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label   asp-for="ItemDescription"></label>
						<textarea type="text" asp-for="ItemDescription" class="form-control" rows="3" placeholder="Write Grocery Description" ></textarea>
						<span asp-validation-for="ItemDescription"  class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="ItemType"></label>
						<input type="text" asp-for="ItemType" class="form-control" placeholder="Write Grocery Type"/>
						<span asp-validation-for="ItemType"  class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="CategoryId"></label>
						<select class="form-control"  asp-for="CategoryId"  asp-items="@Model.CategoryList"></select>
						<span asp-validation-for="CategoryId"  class="text-danger"></span>
					</div>
					<div class="form-group">
						<label  asp-for="ItemPrice"></label>
						<input type="text" asp-for="ItemPrice" class="form-control" />
						<span asp-validation-for="ItemPrice" class="text-danger"></span>
					</div>
		
		            <hr />
					<div class="row">
						<div class="col-sm-12">
						<button type="submit" class="btn btn-primary">Submit</button>
						<a class="btn btn-primary" asp-controller="Grocery" asp-action="Index">Cancel</a>
						</div>
					</div>
			</form>
</div>